{
    "name": "kcloze/slim-swoole",
    "description": "Slim 3 MVC Skeleton With Swoole",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "homepage": "https://github.com/kcloze/slim-swoole",
    "license": "MIT",
    "authors": [
        {
            "name": "kcloze",
            "email": "pei.greet@qq.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "tuupola/slim-jwt-auth": "^2.3",
        "crell/api-problem": "^2.0",
        "vlucas/phpdotenv": "^2.0",
        "firebase/php-jwt": "^5.0",
        "topthink/think-orm": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "app/"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    },
    "scripts":{
        "start":"php -S 0.0.0.0:8080 -t public public/index.php"

    }
}
